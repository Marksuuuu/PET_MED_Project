<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cutcard"
    tools:context=".Appointment">


    <EditText
        android:id="@+id/Pets"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shadow"
        android:drawableRight="@drawable/ic_paws_svgrepo_com"
        android:ems="10"
        android:hint="Pet's Name"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/Breed"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/Pets"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/shadow"
        android:drawableRight="@drawable/ic_baseline_pets_24"
        android:ems="10"
        android:hint="Breed of Pet"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <TextView
        android:id="@+id/Reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Breed"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Reason of Appointment"
        android:textColor="@color/darkgreen"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Reason1"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/Reason"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/shadow"
        android:drawableRight="@drawable/ic_baseline_comment_24"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <TextView
        android:id="@+id/issues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Reason1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Does Your Pet Have Any Known Medical Issues?"
        android:textColor="@color/darkgreen"
        android:textSize="17sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/symptoms"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/issues"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shadow"
        android:drawableRight="@drawable/ic_baseline_comment_24"
        android:ems="10"
        android:hint="Symptoms"
        android:inputType="textMultiLine"
        android:paddingStart="12dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />


    <EditText
        android:id="@+id/in_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/symptoms"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="400dp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/in_date"
        android:layout_toEndOf="@+id/in_date"
        android:layout_toRightOf="@+id/in_date"
        android:backgroundTint="@color/orange"
        android:text="SELECT DATE"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/in_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_date"
        android:layout_alignStart="@+id/btn_date"
        android:layout_alignLeft="@+id/btn_date"
        android:layout_centerVertical="true"
        android:text="SELECT TIME"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/setbtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_time"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttondesign"
        android:text="SET"
        android:textColor="@color/white"
        android:textStyle="bold" />
    />
</RelativeLayout>