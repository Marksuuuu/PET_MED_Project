<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cutcard"
    tools:context=".grooming">




    <EditText
        android:id="@+id/Pets"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shadow"
        android:drawableRight="@drawable/ic_paws_svgrepo_com"
        android:hint="Pet's Name"
        android:paddingStart="12dp"
        android:paddingEnd="20dp"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/Breed"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/Pets"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow"
        android:drawableRight="@drawable/ic_baseline_pets_24"
        android:hint="Breed of Pet"
        android:paddingStart="12dp"
        android:paddingEnd="20dp"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Breed"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Hair Length"
        android:textColor="@color/darkgreen"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/length"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Sure"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </RadioGroup>


    <TextView
        android:id="@+id/Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Services"
        android:textColor="@color/darkgreen"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/radio1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Service"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="Grooming ₱400 "
        android:textStyle="bold">

    </CheckBox>


    <CheckBox
        android:id="@+id/radio2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio1"
        android:layout_centerHorizontal="true"
        android:text="Bath ₱150 "
        android:textStyle="bold">

    </CheckBox>

    <CheckBox
        android:id="@+id/radio3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio2"
        android:layout_centerHorizontal="true"
        android:text="Nail Cutting ₱100 "
        android:textStyle="bold">

    </CheckBox>

    <EditText
        android:id="@+id/in_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="430dp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/in_date"
        android:layout_toEndOf="@+id/in_date"
        android:layout_toRightOf="@+id/in_date"
        android:backgroundTint="@color/orange"
        android:text="SELECT DATE"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/in_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_date"
        android:layout_alignStart="@+id/btn_date"
        android:layout_alignLeft="@+id/btn_date"
        android:layout_centerVertical="true"
        android:text="SELECT TIME"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_time"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttondesign"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textStyle="bold" />




</RelativeLayout>